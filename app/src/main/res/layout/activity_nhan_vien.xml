<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".Nhan_Vien_Activity">
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:stretchColumns="*">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Tin Nhân Viên"
            android:textColor="#2f3363"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TableRow
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edtMaNV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập mã nhân viên "
                android:textColor="#A2A4B5"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/edtHoTen"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập họ tên"
                android:textColor="#A2A4B5"
                android:textSize="18sp" />
        </TableRow >

        <TableRow android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới Tính"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/rdgGioiTinh"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">\
                <RadioButton
                    android:id="@+id/rdtNam"
                    android:text="Nam"
                    android:textColor="#A2A4B5"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdtNu"
                    android:text="Nữ"
                    android:textColor="#A2A4B5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RadioGroup>

        </TableRow>

        <TableRow android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/edtNgaySinh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập ngày sinh"
                android:inputType="date"
                android:textColor="#A2A4B5"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập địa chỉ"
                android:textColor="#A2A4B5"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/edtSDT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập số điện thoại"
                android:inputType="number"
                android:textColor="#A2A4B5"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/edtMatKhau"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Nhập mật khẩu"
                android:textColor="#A2A4B5"
                android:textSize="18sp" />
        </TableRow>

        <TableRow android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân Quyền"
                android:textColor="#2f3363"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/rdgPhanQuyen"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">
                <RadioButton
                    android:id="@+id/rdtAdmin"
                    android:text="Admin"
                    android:textColor="#A2A4B5"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdtNV"
                    android:text="nhanvien"
                    android:checked="true"
                    android:textColor="#A2A4B5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnThemNV"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/background"
                android:text="Thêm"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSuaNV"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/background"
                android:text="Sửa"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnXoaNV"
                style="@android:style/Widget.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/background"
                android:text="Xóa"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listNV"/>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>